@model IEnumerable<QuanLyKhachSan.Model.KhachHang>

<table class="table table-bordered table-hover">
  
    <tbody>
        @foreach (var khachHang in Model)
        {
            <tr>
                <td>@khachHang.MaKhachHang</td>
                <td>@khachHang.TenKhachHang</td>
                <td>@khachHang.GioiTinh</td>
                <td>@khachHang.NgaySinh.ToShortDateString()</td>
                <td>@khachHang.DienThoai</td>
                <td>@khachHang.DiaChi</td>
                <td>@khachHang.GhiChu</td>


                <td>
                    <button type="button" class="btn btn-primary editButton" data-id="@khachHang.MaKhachHang" style="margin-left:5px;">
                        <i class="bi bi-pencil"></i>
                    </button>
                </td>



                @using (Html.BeginForm("XoaKhachHang", "KhachHang", new { id = khachHang.MaKhachHang }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <td>
                        <button type="submit" class="btn btn-primary" onclick="return confirm('Are you sure you want to delete this item?');" style="margin-left:5px;">
                            <i class="bi bi-trash"></i>
                        </button>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
