    <div class="form-containerEdit">
        <button id="closeButtonEdit"><i class="bi bi-x-lg icon_x"></i></button>

        <h2>Sửa thông tin khách hàng</h2>

        <form method="post" asp-action="SuaKhachHang" asp-controller="KhachHang">
            <div class="border p-3 mt-4">
                <div class="row pb-2">

                    <label>Mã Khách Hàng</label>
                    <input name="MaKhachHangSua" class=form-control />
                    <label>Tên Khách Hàng</label>
                    <input name="TenKhachHangSua" class=form-control />
                    <label>Giới Tính</label>

                    <input name="GioiTinhSua" class=form-control />
                    <label>Ngày Sinh</label>
                    <input name="NgaySinhSua" class=form-control type="date" />
                    <label>Điện Thoại</label>
                    <input name="DienThoaiSua" class=form-control />
                    <label>Địa Chỉ</label>
                    <input name="DiaChiSua" class=form-control />
                    <label>Ghi Chú</label>
                    <input name="GhiChuSua" class=form-control />
                </div>


                <button type="submit" class="btn btn-primary">Edit</button>
            </div>

        </form>
    </div>
</div>

 


<script src="~/js/pop-up.js"/>