@model IEnumerable<QuanLyKhachSan.Model.KhachHang>

@{
    int currentPage = (int)ViewData["CurrentPage"];
    int totalPages = (int)ViewData["TotalPages"];
    int numberOfPagesToShow = 3; // Số trang trung gian bạn muốn hiển thị
}

<style>
    .container {
        margin-top: 20px;

    }

    .row {
        margin-bottom: 20px;
    }

    .col-md-3 {
        padding-left: 20px;
        padding-right: 20px;
        border-right: 1px solid #ddd;
    }

    .card {
        width: 100%;
        margin-bottom: 20px;
    }

    .card-header {
        padding: 10px 20px;
        background-color: #f7f7f7;
        border-bottom: 1px solid #ddd;
    }

    .card-body {
        padding: 20px;
    }

    .table {
        width: 100%;
        table-layout: fixed;
    }

        .table th,
        .table td {
            padding: 10px;
        }

    .form-group {
        margin-bottom: 10px;
    }

    .form-control {
        width: 100%;
    }


</style>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Tìm kiếm</h5>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <input type="text" class="form-control" id="tim-kiem" placeholder="Nhập từ khóa">
                    </div>
                </div>
            </div>
        



            <div class="card w-100 bg-white">
                <div class="card-header"><h5>Giới Tính</h5></div>
                <div class="card-body">
                    <div class="btn-group-vertical btn-group-toggle w-100 text-left" data-toggle="buttons">
                        <label class="btn btn-secondary w-100">
                            <input type="radio" name="gender" id="all" autocomplete="off" checked> Tất cả
                        </label>
                        <label class="btn btn-secondary w-100">
                            <input type="radio" name="gender" id="male" autocomplete="off"> Nam
                        </label>
                        <label class="btn btn-secondary w-100">
                            <input type="radio" name="gender" id="female" autocomplete="off"> Nữ
                        </label>
                    </div>
                </div>
            </div>


            <div class="card w-100 bg-white">
                <div class="card-header"><h5>Trạng Thái</h5></div>
                <div class="card-body">
                    <div class="btn-group-vertical btn-group-toggle w-100 text-left" data-toggle="buttons">
                        <label class="btn btn-secondary w-100">
                            <input type="radio" name="TrangThai" id="DangHoatDong" autocomplete="off" checked> Đang Hoạt Động
                        </label>
                        <label class="btn btn-secondary w-100">
                            <input type="radio" name="TrangThai" id="NgungHoatDong" autocomplete="off"> Ngừng Hoạt Động
                        </label>
                        <label class="btn btn-secondary w-100">
                            <input type="radio" name="TrangThai" id="TatCa" autocomplete="off"> Tất Cả
                        </label>
                    </div>
                </div>
            </div>



        </div>

@*         Ba ô tìm kiếm
 *@        <style>
            <style >
            .table td, .table th {
                white-space: normal;
                word-wrap: break-word;
            }
        </style>
        <div class="col-md-9">
            <a class="nav-link text-dark btn btn-primary w-25" asp-area="" asp-controller="KhachHang" asp-action="ThemKhachHang">Thêm Khách Hàng</a>
            <table class="table">
                <thead>
                    <tr>
                        <th width="100px" height="100%">Mã KH</th>
                        <th width="180px" height="100%">Tên KH</th>
                        <th width="100px" height="100%">Giới tính</th>
                        <th width="150px" height="100%">Ngày sinh</th>
                        <th width="130px" height="100%">Điện thoại</th>
                        <th width="150px" height="100%">Địa chỉ</th>
                        <th width="100px" height="100%">Ghi chú</th>
                        <th width="70px">Sửa</th>
                        <th width="70px">Xóa</th>
                    </tr>
                </thead>
                <tbody>
                        @foreach (var khachHang in Model)
                        {
                        <tr>
                            <td>@khachHang.MaKhachHang</td>
                            <td>@khachHang.TenKhachHang</td>
                            <td>@khachHang.GioiTinh</td>
                            <td>@khachHang.NgaySinh</td>
                            <td>@khachHang.DienThoai</td>
                            <td>@khachHang.DiaChi</td>
                            <td>@khachHang.GhiChu</td>
                            <td><a asp-action="SuaKhachHang" asp-route-id="@khachHang.MaKhachHang" class="btn btn-primary">Sửa</a></td>
                                @using (Html.BeginForm("XoaKhachHang", "KhachHang", new { id = khachHang.MaKhachHang }, FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                <td><input type="submit" value="Xóa" class="btn btn-primary" onclick="return confirm('Are you sure you want to delete this item?');" /></td>
                                }
                        </tr>
                        }
                </tbody>
            </table>
        </div>

        </div>

    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-end">
            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = currentPage - 1 })" tabindex="-1">Previous</a>
            </li>
            @if (totalPages <= numberOfPagesToShow)
            {
                // Hiển thị tất cả các trang nếu tổng số trang nhỏ hơn hoặc bằng số trang trung gian
                for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                    </li>
                }
            }
            else
            {
                // Hiển thị một số trang trung gian và tạo nút "..." để bỏ qua các trang còn lại
                int startPage = Math.Max(currentPage - (numberOfPagesToShow / 2), 1);
                int endPage = Math.Min(startPage + numberOfPagesToShow - 1, totalPages);

                if (startPage > 1)
                {
                    <li class="page-item"><a class="page-link" href="@Url.Action("Index", new { page = 1 })">1</a></li>
                    if (startPage > 2)
                    {
                        <li class="page-item disabled"><a class="page-link" href="#">...</a></li>
                    }
                }

                for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                    </li>
                }

                if (endPage < totalPages)
                {
                    if (endPage < totalPages - 1)
                    {
                        <li class="page-item disabled"><a class="page-link" href="#">...</a></li>
                    }
                    <li class="page-item"><a class="page-link" href="@Url.Action("Index", new { page = totalPages })">@totalPages</a></li>
                }
            }

            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = currentPage + 1 })">Next</a>
            </li>
        </ul>
    </nav>



</div>

    <style>
        .btn-group-vertical .btn {
            text-align: left;
        }
    </style>
   

</div>
