@model IEnumerable<QuanLyKhachSan.Model.KhachHang>

@{
    int currentPage = (int)ViewData["CurrentPage"];
    int totalPages = (int)ViewData["TotalPages"];
    int numberOfPagesToShow = 3; // Số trang trung gian bạn muốn hiển thị
}
<link rel="stylesheet" href="~/css/css-min-all.css"/>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<div class="container">
    <div class="row">
        <div class="col-md-2">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Tìm kiếm</h5>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <input type="text" class="form-control" id="tim-kiem" placeholder="Nhập từ khóa">
                    </div>
                </div>
            </div>
        



            <div class="card w-100 bg-white">
                <div class="card-header"><h5>Giới Tính</h5></div>
                <div class="card-body">
                    <div class="btn-group-vertical btn-group-toggle w-100 text-left" data-toggle="buttons">
                        <label class="btn btn-secondary w-100">
                            <input type="radio" name="gender" id="all" autocomplete="off" checked> Tất cả
                        </label>
                        <label class="btn btn-secondary w-100">
                            <input type="radio" name="gender" id="male" autocomplete="off"> Nam
                        </label>
                        <label class="btn btn-secondary w-100">
                            <input type="radio" name="gender" id="female" autocomplete="off"> Nữ
                        </label>
                    </div>
                </div>
            </div>


            <div class="card w-100 bg-white">
                <div class="card-header"><h5>Trạng Thái</h5></div>
                <div class="card-body">
                    <div class="btn-group-vertical btn-group-toggle w-100 text-left" data-toggle="buttons">
                        <label class="btn btn-secondary w-100">
                            <input type="radio" name="TrangThai" id="DangHoatDong" autocomplete="off" checked> Đang Hoạt Động
                        </label>
                        <label class="btn btn-secondary w-100">
                            <input type="radio" name="TrangThai" id="NgungHoatDong" autocomplete="off"> Ngừng Hoạt Động
                        </label>
                        <label class="btn btn-secondary w-100">
                            <input type="radio" name="TrangThai" id="TatCa" autocomplete="off"> Tất Cả
                        </label>
                    </div>
                </div>
            </div>
        </div>


        <div class="col-md-9">
            <button type="button" id="addButton" class="nav-link text-dark btn w-25 btn_them" asp-area="" asp-controller="KhachHang" asp-action="ThemKhachHang">Thêm Khách Hàng</button>

            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th width="100px" height="100%" class="text-center">Mã KH</th>
                        <th width="180px" height="100%" class="text-center">Tên KH</th>
                        <th width="100px" height="100%" class="text-center">Giới tính</th>
                        <th width="150px" height="100%" class="text-center">Ngày sinh</th>
                        <th width="130px" height="100%" class="text-center">Điện thoại</th>
                        <th width="150px" height="100%" class="text-center">Địa chỉ</th>
                        <th width="100px" height="100%" class="text-center">Ghi chú</th>
                        <th width="70px">Sửa</th>
                        <th width="70px">Xóa</th>
                    </tr>
                </thead>
                <tbody>
                        @foreach (var khachHang in Model)
                        {
                        <tr>
                            <td>@khachHang.MaKhachHang</td>
                            <td>@khachHang.TenKhachHang</td>
                            <td>@khachHang.GioiTinh</td>
                            <td>@khachHang.NgaySinh.ToShortDateString()</td>
                            <td>@khachHang.DienThoai</td>
                            <td>@khachHang.DiaChi</td>
                            <td>@khachHang.GhiChu</td>


                            <td>
                                <button type="button" class="btn btn-primary editButton" data-id="@khachHang.MaKhachHang">
                                <i class="bi bi-pencil"></i>
                                </button>
                            </td>



                            @using (Html.BeginForm("XoaKhachHang", "KhachHang", new { id = khachHang.MaKhachHang }, FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <td>
                                    <button type="submit" class="btn btn-primary" onclick="return confirm('Are you sure you want to delete this item?');">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </td>
                            }
                        </tr>
                        }
                </tbody>
            </table>
        </div>

        </div>

    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-end">
            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = currentPage - 1 })" tabindex="-1">Previous</a>
            </li>
            @if (totalPages <= numberOfPagesToShow)
            {
                // Hiển thị tất cả các trang nếu tổng số trang nhỏ hơn hoặc bằng số trang trung gian
                for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                    </li>
                }
            }
            else
            {
                // Hiển thị một số trang trung gian và tạo nút "..." để bỏ qua các trang còn lại
                int startPage = Math.Max(currentPage - (numberOfPagesToShow / 2), 1);
                int endPage = Math.Min(startPage + numberOfPagesToShow - 1, totalPages);

                if (startPage > 1)
                {
                    <li class="page-item"><a class="page-link" href="@Url.Action("Index", new { page = 1 })">1</a></li>
                    if (startPage > 2)
                    {
                        <li class="page-item disabled"><a class="page-link" href="#">...</a></li>
                    }
                }

                for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                    </li>
                }

                if (endPage < totalPages)
                {
                    if (endPage < totalPages - 1)
                    {
                        <li class="page-item disabled"><a class="page-link" href="#">...</a></li>
                    }
                    <li class="page-item"><a class="page-link" href="@Url.Action("Index", new { page = totalPages })">@totalPages</a></li>
                }
            }

            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = currentPage + 1 })">Next</a>
            </li>
        </ul>
    </nav>



</div>

 


<!-- Lớp đè lên và form thêm -->
<div id="overlay" class="overlay">
    <div class="form-container">
        <button id="closeButton"><i class="bi bi-x-lg icon_x"></i></button>

        <h2>Thêm thông tin khách hàng</h2>

        <form method="post" asp-action="ThemKhachHang" asp-controller="KhachHang">
            <div class="border p-3 mt-4">
                <div class="row pb-2">
         
                    <label>Mã Khách Hàng</label>
                    <input name="MaKhachHang" class=form-control />
                    <label>Tên Khách Hàng</label>
                    <input name="TenKhachHang" class=form-control />
                    <label>Giới Tính</label>

                    <input name="GioiTinh" class=form-control />
                    <label>Ngày Sinh</label>
                    <input name="NgaySinh" class=form-control type="date" />
                    <label>Điện Thoại</label>
                    <input name="DienThoai" class=form-control />
                    <label>Địa Chỉ</label>
                    <input name="DiaChi" class=form-control />
                    <label>Ghi Chú</label>
                    <input name="GhiChu" class=form-control />
                </div>


                <button type="submit" class="btn btn-primary">Create</button>
            </div>

        </form>
    </div>
</div>
@* edit *@
