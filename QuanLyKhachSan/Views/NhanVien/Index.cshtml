 @model IEnumerable<QuanLyKhachSan.Model.NhanVien> 
 
  

@{
    int currentPage = (int)ViewData["CurrentPageNhanVien"];
    int totalPages = (int)ViewData["TotalPagesNhanVien"];
    int numberOfPagesToShow = 3; // Số trang trung gian bạn muốn hiển thị
}


<style>
    .container {
        margin-top: 20px;
        max-width: 5000px;
    }

    .row {
        margin-bottom: 20px;
    }

    .col-md-3 {
        padding-left: 20px;
        padding-right: 20px;
        border-right: 1px solid #ddd;
    }

    .card {
        width: 100%;
        margin-bottom: 20px;
    }

    .card-header {
        padding: 10px 20px;
        background-color: #f7f7f7;
        border-bottom: 1px solid #ddd;
    }

    .card-body {
        padding: 20px;
    }

    .table {
        width: 100%;
        table-layout: fixed;
    }

        .table th,
        .table td {
            padding: 10px;
        }

    .form-group {
        margin-bottom: 10px;
    }

    .form-control {
        width: 100%;
    }
    /* Lớp đè */
    .overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5); /* Màu nền độ mờ (sử dụng rgba để điều chỉnh độ trong suốt) */
        z-index: 1000; /* Độ cao z để đảm bảo lớp đè hiển thị trên các phần tử khác */
    }

    /* Nội dung lớp đè */
    .form-container {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: #fff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3); /* Đổ bóng cho lớp đè */
        z-index: 1001; /* Độ cao z cao hơn lớp đè */
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-2">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Tìm kiếm</h5>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <input type="text" class="form-control" id="tim-kiem" placeholder="Nhập từ khóa">
                    </div>
                </div>
            </div>




            <div class="card w-100 bg-white">
                <div class="card-header"><h5>Giới Tính</h5></div>
                <div class="card-body">
                    <div class="btn-group-vertical btn-group-toggle w-100 text-left" data-toggle="buttons">
                        <label class="btn btn-secondary w-100">
                            <input type="radio" name="gender" id="all" autocomplete="off" checked> Tất cả
                        </label>
                        <label class="btn btn-secondary w-100">
                            <input type="radio" name="gender" id="male" autocomplete="off"> Nam
                        </label>
                        <label class="btn btn-secondary w-100">
                            <input type="radio" name="gender" id="female" autocomplete="off"> Nữ
                        </label>
                    </div>
                </div>
            </div>


            <div class="card w-100 bg-white">
                <div class="card-header"><h5>Trạng Thái</h5></div>
                <div class="card-body">
                    <div class="btn-group-vertical btn-group-toggle w-100 text-left" data-toggle="buttons">
                        <label class="btn btn-secondary w-100">
                            <input type="radio" name="DangHoatDong" id="all" autocomplete="off" checked> Đang Hoạt Động
                        </label>
                        <label class="btn btn-secondary w-100">
                            <input type="radio" name="gender" id="male" autocomplete="off"> Ngừng Hoạt Động
                        </label>
                        <label class="btn btn-secondary w-100">
                            <input type="radio" name="gender" id="female" autocomplete="off"> Tất Cả
                        </label>
                    </div>
                </div>
            </div>



        </div>


        <style>
            .table td, .table th {
                white-space: normal;
                word-wrap: break-word;
            }
        </style>
        <div class="col-md-9">
            @* <a class="nav-link text-dark btn btn-primary  w-25" asp-area="" asp-controller="NhanVien" asp-action="ThemNhanVien">Thêm Nhân Viên</a> *@


            <button type="button" id="addButton" class="nav-link text-dark btn btn-primary w-25" asp-area="" asp-controller="KhachHang" asp-action="ThemKhachHang">Thêm Khách Hàng</button>



            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th width="80px" class="text-center">Mã NV</th>
                        <th class="text-center">Tên NV</th>
                        <th class="text-center">Giới tính</th>
                        <th class="text-center">Ngày sinh</th>
                        <th class="text-center">Điện thoại</th>
                        <th class="text-center">Địa chỉ</th>
                        <th class="text-center">Ghi chú</th>
                        <th class="text-center" width="80px">Sửa</th>
                        <th class="text-center" width="80px">Xóa</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var nhanvien in Model)
                    {
                        <tr>
                            <td class="text-truncate">@nhanvien.MaNhanVien</td>
                            <td class="text-truncate">@nhanvien.TenNhanVien</td>
                            <td class="text-truncate">@nhanvien.GioiTinh</td>
                            <td class="text-truncate">@nhanvien.NgaySinh</td>
                            <td class="text-truncate">@nhanvien.DienThoai</td>
                            <td class="text-truncate">@nhanvien.DiaChi</td>
                            <td class="text-truncate">@nhanvien.GhiChu</td>
                            <td class="text-truncate"><a asp-action="SuaNhanVien" asp-controller="NhanVien" asp-route-id="@nhanvien.MaNhanVien" class="btn btn-primary">Sửa</a></td>
                            @using (Html.BeginForm("XoaNhanVien", "NhanVien", new { id = nhanvien.MaNhanVien }, FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <td><input type="submit" value="Xóa" class="btn btn-primary" onclick="return confirm('Are you sure you want to delete this item?');" /></td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-end">
            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = currentPage - 1 })" tabindex="-1">Previous</a>
            </li>
            @if (totalPages <= numberOfPagesToShow)
            {
                // Hiển thị tất cả các trang nếu tổng số trang nhỏ hơn hoặc bằng số trang trung gian
                for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                    </li>
                }
            }
            else
            {
                // Hiển thị một số trang trung gian và tạo nút "..." để bỏ qua các trang còn lại
                int startPage = Math.Max(currentPage - (numberOfPagesToShow / 2), 1);
                int endPage = Math.Min(startPage + numberOfPagesToShow - 1, totalPages);

                if (startPage > 1)
                {
                    <li class="page-item"><a class="page-link" href="@Url.Action("Index", new { page = 1 })">1</a></li>
                    if (startPage > 2)
                    {
                        <li class="page-item disabled"><a class="page-link" href="#">...</a></li>
                    }
                }

                for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                    </li>
                }

                if (endPage < totalPages)
                {
                    if (endPage < totalPages - 1)
                    {
                        <li class="page-item disabled"><a class="page-link" href="#">...</a></li>
                    }
                    <li class="page-item"><a class="page-link" href="@Url.Action("Index", new { page = totalPages })">@totalPages</a></li>
                }
            }

            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = currentPage + 1 })">Next</a>
            </li>
        </ul>
    </nav>

</div>





<!-- Lớp đè lên và form thêm -->
<div id="overlay" class="overlay">
    <div class="form-container">
        <h2>Thêm thông tin khách hàng</h2>
        <form method="post" asp-action="ThemNhanVien" asp-controller="NhanVien">
            <div class="border p-3 mt-4">
                <div class="row pb-2">
                    <h2>Thêm Nhân Viên</h2>
                    <hr />
                    <label>Mã Nhân Viên</label>
                    <input name="MaNhanVien" class=form-control />
                    <label>Tên Nhân Viên</label>
                    <input name="TenNhanVien" class=form-control />
                    <label>Giới Tính</label>

                    <input name="GioiTinh" class=form-control />
                    <label>Ngày Sinh</label>
                    <input name="NgaySinh" class=form-control type="date" />
                    <label>Điện Thoại</label>
                    <input name="DienThoai" class=form-control /> 
                    <label>Địa Chỉ</label>
                    <input name="DiaChi" class=form-control />
                    <label>Ghi Chú</label>
                    <input name="GhiChu" class=form-control />
                </div>
              

                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-controller="NhanVien" asp-action="Index" class="btn btn-primary">Back To List</a>
            </div>

        </form>
    </div>
</div>




<style>
    .btn-group-vertical .btn {
        text-align: left;
    }
</style>





<script>
    document.addEventListener('DOMContentLoaded', function () {
        var addButton = document.getElementById('addButton');
        var overlay = document.getElementById('overlay');
        var closeButton = document.getElementById('closeButton');

        addButton.addEventListener('click', function () {
            overlay.style.display = 'block';
        });

        closeButton.addEventListener('click', function () {
            overlay.style.display = 'none';
        });
    });
</script>
