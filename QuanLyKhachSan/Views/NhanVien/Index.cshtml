@model IEnumerable<QuanLyKhachSan.Model.NhanVien>


<style>
    .container {
        margin-top: 20px;
    }

    .row {
        margin-bottom: 20px;
    }

    .col-md-3 {
        padding-left: 20px;
        padding-right: 20px;
        border-right: 1px solid #ddd;
    }

    .card {
        width: 100%;
        margin-bottom: 20px;
    }

    .card-header {
        padding: 10px 20px;
        background-color: #f7f7f7;
        border-bottom: 1px solid #ddd;
    }

    .card-body {
        padding: 20px;
    }

    .table {
        width: 100%;
        table-layout: fixed;
    }

        .table th,
        .table td {
            padding: 10px;
        }

    .form-group {
        margin-bottom: 10px;
    }

    .form-control {
        width: 100%;
    }

</style>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Tìm kiếm</h5>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <input type="text" class="form-control" id="tim-kiem" placeholder="Nhập từ khóa">
                    </div>
                </div>
            </div>




            <div class="card w-100 bg-white">
                <div class="card-header"><h5>Giới Tính</h5></div>
                <div class="card-body">
                    <div class="btn-group-vertical btn-group-toggle w-100 text-left" data-toggle="buttons">
                        <label class="btn btn-secondary w-100">
                            <input type="radio" name="gender" id="all" autocomplete="off" checked> Tất cả
                        </label>
                        <label class="btn btn-secondary w-100">
                            <input type="radio" name="gender" id="male" autocomplete="off"> Nam
                        </label>
                        <label class="btn btn-secondary w-100">
                            <input type="radio" name="gender" id="female" autocomplete="off"> Nữ
                        </label>
                    </div>
                </div>
            </div>


            <div class="card w-100 bg-white">
                <div class="card-header"><h5>Trạng Thái</h5></div>
                <div class="card-body">
                    <div class="btn-group-vertical btn-group-toggle w-100 text-left" data-toggle="buttons">
                        <label class="btn btn-secondary w-100">
                            <input type="radio" name="DangHoatDong" id="all" autocomplete="off" checked> Đang Hoạt Động
                        </label>
                        <label class="btn btn-secondary w-100">
                            <input type="radio" name="gender" id="male" autocomplete="off"> Ngừng Hoạt Động
                        </label>
                        <label class="btn btn-secondary w-100">
                            <input type="radio" name="gender" id="female" autocomplete="off"> Tất Cả
                        </label>
                    </div>
                </div>
            </div>



        </div>

        @*         Ba ô tìm kiếm
        *@        <style>
                      <style >
                      .table td, .table th {
                          white-space: normal;
                          word-wrap: break-word;
                      }
        </style>
        <div class="col-md-9">
            <a class="nav-link text-dark btn btn-primary  w-25" asp-area="" asp-controller="NhanVien" asp-action="ThemNhanVien">Thêm Nhân Viên</a>
            <table class="table">
                <thead>
                    <tr>
                        <th width="100px" height="100%">Mã NV</th>
                        <th width="180px" height="100%">Tên NV</th>
                        <th width="100px" height="100%">Giới tính</th>
                        <th width="150px" height="100%">Ngày sinh</th>
                        <th width="130px" height="100%">Điện thoại</th>
                        <th width="150px" height="100%">Địa chỉ</th>
                        <th width="100px" height="100%">Ghi chú</th>
                        <th width="70px">Sửa</th>
                        <th width="70px">Xóa</th>
                    </tr>
                </thead>
                <tbody>
                        @foreach (var nhanvien in Model)
                        {
                        <tr>
                            <td>@nhanvien.MaNhanVien</td>
                            <td>@nhanvien.TenNhanVien</td>
                            <td>@nhanvien.GioiTinh</td>
                            <td>@nhanvien.NgaySinh</td>
                            <td>@nhanvien.DienThoai</td>
                            <td>@nhanvien.DiaChi</td>
                            <td>@nhanvien.GhiChu</td>
                            <td><a asp-action="SuaNhanVien" asp-controller="NhanVien" asp-route-id="@nhanvien.MaNhanVien" class="btn btn-primary">Sửa</a></td>
                                @using (Html.BeginForm("XoaNhanVien", "NhanVien", new { id = nhanvien.MaNhanVien }, FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                <td><input type="submit" value="Xóa" class="btn btn-primary" onclick="return confirm('Are you sure you want to delete this item?');" /></td>
                                }
                        </tr>
                        }
                </tbody>
            </table>
        </div>

    </div>



</div>

<style>
    .btn-group-vertical .btn {
        text-align: left;
    }
</style>



</div>
