@model NhanVien

<form method="post" asp-action="SuaNhanVien" asp-controller="NhanVien">
    <div class="border p-3 mt-4">
        <div class="row pd-2">
            <h2>Sửa Nhân Viên</h2>
            <hr />
        </div>
        @* báo lỗi toàn bộ *@
        @* <div asp-validation-summary=All></div> *@
        <div class="mb-3">
            <label asp-for="MaNhanVien"></label>
            <input asp-for="MaNhanVien" class="form-control" />
            <span asp-validation-for=MaNhanVien class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="TenNhanVien"></label>
            <input asp-for="TenNhanVien" class="form-control" />
            <span asp-validation-for=TenNhanVien class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="GioiTinh"></label>
            <input asp-for="GioiTinh" class="form-control" />
            <span asp-validation-for=GioiTinh class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="NgaySinh"></label>
            <input asp-for="NgaySinh" class="form-control" />
            <span asp-validation-for=NgaySinh class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="DienThoai"></label>
            <input asp-for="DienThoai" class="form-control" />
            <span asp-validation-for=DienThoai class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="DiaChi"></label>
            <input asp-for="DiaChi" class="form-control" />
            <span asp-validation-for=DiaChi class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="GhiChu"></label>
            <input asp-for="GhiChu" class="form-control" />
            <span asp-validation-for=GhiChu class="text-danger"></span>

        </div>


        <button type="submit" class=" btn btn-primary">  <i class="bi bi-plus-circle"></i>Update</button>
        <a asp-controller="NhanVien" asp-action="Index" class=" btn btn-primary"><i class="bi bi-arrow-return-left"></i>Back to list</a>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
