@model QuanLyKhachSan.Model.TaiKhoan
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="~/css/QuenMatKhau.css">
  <title>LOGIN ROYAL HOTEL A$AP</title>
</head>
<body>
    <section>
        <div class="form-box">
            <div class="form-value">
                <form method="post">
                    <h2 style="font-family: poppins;">Quên mật khẩu</h2>
                    <h3>Vui lòng nhập email hoặc số di động để làm mới mật khẩu của bạn.</h3>
                    <div class="inputbox">
                        <ion-icon name="mail-outline"></ion-icon>
                        <input type="text" required asp-for="Email">
                        <label >Email / Số điện thoại</label>
                     
                    </div>
                    <div class="inputbox">
                        <ion-icon name="mail-outline"></ion-icon>
                        <input type="text" required name="ConfirmId">
                        <label for="">Mã Xác Thực</label>

                    </div>
                    <button type="submit" asp-action="GuiMail" asp-controller="QuenMatKhau">Lấy lại mật khẩu</button>
                    <a href="#">Quay lại đăng nhập</a>
                    <h1> @ViewBag.Message</h1>
                </form>
            </div>
        </div>
    </section>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
</html>