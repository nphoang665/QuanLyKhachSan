@model IEnumerable<QuanLyKhachSan.Model.Room>
@{
	ViewData["Title"] = "Quản Lý Phòng";
}

<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title></title>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
	<link rel="stylesheet" href="~/css/QuanLyPhong.css"/>
</head>

<body>
	<div class="container">
		<div class="row">
			<div class="col-md-2">
				<div class="card">
					<div class="card-header">
						<h5 class="card-title">Tìm kiếm</h5>
					</div>
					<div class="card-body">
						<div class="form-group">
							<input type="text" class="form-control" id="tim-kiem" placeholder="Nhập từ khóa">
						</div>
					</div>
				</div>


				<div class="card w-100 bg-white">
					<div class="card-header">
						<h5>Giới Tính</h5>
					</div>
					<div class="card-body">
						<div class="btn-group-vertical btn-group-toggle w-100 text-left" data-toggle="buttons">
							<label class="btn btn-secondary w-100">
								<input type="radio" name="gender" id="all" autocomplete="off" checked> Tất cả
							</label>
							<label class="btn btn-secondary w-100">
								<input type="radio" name="gender" id="male" autocomplete="off"> Nam
							</label>
							<label class="btn btn-secondary w-100">
								<input type="radio" name="gender" id="female" autocomplete="off"> Nữ
							</label>
						</div>
					</div>
				</div>


				<div class="card w-100 bg-white">
					<div class="card-header">
						<h5>Trạng Thái</h5>
					<div class="card-body">
						<div class="btn-group-vertical btn-group-toggle w-100 text-left" data-toggle="buttons">
							<label class="btn btn-secondary w-100">
								<input type="radio" name="DangHoatDong" id="all" autocomplete="off" checked> Đang
								Hoạt Động
							</label>
							<label class="btn btn-secondary w-100">
								<input type="radio" name="gender" id="male" autocomplete="off"> Ngừng Hoạt Động
							</label>
							<label class="btn btn-secondary w-100">
								<input type="radio" name="gender" id="female" autocomplete="off"> Tất Cả
							</label>
						</div>
					</div>
				</div>
			</div>

			
		</div>
			<div class="col-md-9">
				<table class="table table-bordered">
					<thead>
						<tr>
							<th>Mã Phòng</th>
							<th>Khu Vực</th>
							<th>Giá Theo Giờ</th>
							<th>Giá Theo Ngày</th>
							<th>Trạng Thái</th>
							<th>Ghi Chú</th>
							<th width="70px">Sửa</th>
						</tr>
					</thead>
					<tbody>
						@foreach(var phong in Model)
						{
							<tr>
								<td>
									@phong.MaPhong
								</td>
								<td>
									@phong.KhuVuc
								</td>
								<td>
									@phong.GiaTheoGio
								<td>
									@phong.GiaTheoNgay
								</td>
								<td>
									1
								</td>
								<td>
									@phong.GhiChu
								</td>
								<td>
									<button type="button" class="btn btn-primary editButton" data-id="@phong.MaPhong" style="margin-left:5px;">
										<i class="bi bi-pencil"></i>
									</button>
								</td>
							</tr>
						}
						
					</tbody>
				</table>
			</div>
	</div>
	</div>
</body>

</html>