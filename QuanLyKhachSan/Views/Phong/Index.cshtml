@model DatPhong
<link href="~/css/Phong.css" rel="stylesheet" />

@{


	var bookedRooms = ViewBag.BookedRooms as List<string>;
	var khachHangDatPhong = ViewBag.KhachHangs as List<string>;
}

<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Room Booking</title>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
		  integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
	<link rel="stylesheet"
		@* mới *@
		  href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>

<body style="margin-top:80px;">

	<div class="container-fluid" id="tongquat">
		<header>
			<nav class="nav navbar">
				<a class="btn btn-primary btn_color" href="#">
					<i class="bi bi-grid-3x3"></i>
					Sơ đồ
				</a>
				<a class="d-none"><i class="bi bi-search"></i></a>
				<a><input type="checkbox" /> <label>Đang sử dụng</label></a>
				<a> <input type="checkbox" /> <label>Phòng Trống</label></a>
				<a class="d-none"><i class="bi bi-gear"></i></a>
				<a class="btn btn-primary btn_color" id="DatPhong"><i class="bi bi-plus-circle"></i> Đặt Phòng</a>
			</nav>
		</header>

		<div class="row">
			@foreach (var room in ViewBag.Rooms)
			{
				var roomClass = "room";
				if (bookedRooms.Contains(room.MaPhong))
				{
					roomClass += " booked";
				}
				<div class="col-sm-6 col-md-4 col-lg-3">
					<div class="@roomClass" onclick="HienThiThongTinPhong('@room.MaPhong')">
						<div class="room-number">
							<a>P.@room.MaPhong</a>
						</div>
						<div class="icon">
							<div class="icon-star"><i class="bi bi-stars"></i></div>

							<!-- Call checkRoomStatus function when the icon is clicked -->
							<div style="cursor:pointer" class="icon-three-dot-vertical" onclick="checkRoomStatus('@room.MaPhong')"> <i class="bi bi-three-dots-vertical"></i></div>
						</div>
						<p class="text_type_room">@room.HangPhong</p>
						<p class="text-price">@room.GiaTheoNgay</p>
					</div>
				</div>
			}
		</div>

	</div>
	@* popup *@

	<div class="overlay" id="overlay">
		<div class="form-container">
			<button id="closeButton"><i class="bi bi-x-lg icon_x"></i></button>
			<form method="post">
				<h2>Đặt nhận phòng</h2>
				<table class="table table-bordered">
					<thead>
						<tr>
							<th>Mã DP</th>
							<th>Phòng</th>
							<th>Hạng Phòng</th>
							<th>Mã KH</th>
							<th>Mã NV</th>
							<th>Hình Thức</th>
							<th>Giá Phòng</th>
							<th>Ngày Nhận</th>
							<th>Trả Phòng</th>
							<th>Dự Kiến</th>
							<th>Thành Tiền</th>
						</tr>
					</thead>

					<tbody>
						<tr>
							@* Mã đặt phòng *@
							<td><input asp-for="MaDatPhong" style="width:100px" /></td>
							<td>
								@* Phòng *@
								<select class="combo" id="Ma_Phong" asp-for="Phong" style="width:60px" onchange="updateHangPhong()">

									@foreach (var phong in ViewBag.Rooms)
									{
										<option value="@phong.MaPhong"> P.@phong.MaPhong </option>
									}

								</select>
							</td>
							@* Hạng Phòng *@
							<td>

								<label id="Hang_Phong" asp-for="HinhThuc">Phòng Đơn</label>
								<input type="hidden" asp-for="HinhThuc" id="Input_HangPhong" value="Phòng Đơn" />
							</td>
							@* mã khách hàng *@
							<td>
								<select style="width:80px" class="combo" asp-for="MaKhachHang">

									@foreach (var kh in ViewBag.KhachHangs)
									{
										<option value="@kh.MaKhachHang"> @kh.MaKhachHang</option>
									}
								</select>
							</td>
							@* Mã nhân viên *@
							<td> <input asp-for="MaNhanVien"/></td>
							@* Hình thức *@
							<td>
								<select class="combo_Gio_Ngay" asp-for="HinhThuc" onchange="updateDuration()">
									<option value="Gio"> Giờ  </option>
									<option value="Ngay"> Ngày </option>
								</select>
							</td>

							@* Giá phòng *@
							<td>
								<label asp-for="GiaPhong" id="labelGiaPhong">50000</label>
								<input type="hidden" asp-for="GiaPhong" id="gia-phong" value="50000" />
							</td>
							@* Ngày Nhận *@
							<td>
								<input style="width:185px" type="datetime-local" name="NgayNhan" asp-for="NgayNhan" />
							</td>
							@* Ngày trả *@
							<td>
								<input style="width:185px" type="datetime-local" name="NgayTra" asp-for="NgayTra" />
							</td>
							@* Dự kiến *@
							<td class="duration">
								<label asp-for="DuKien" id="labelDuKien">0 giờ</label>
								<input type="hidden" asp-for="DuKien" id="dukien" />
							</td>
							@* Thành tiền *@
							<td class="thanhtien">
								<label asp-for="ThanhTien" id="lableThanhTien">000.000</label>
								<input type="hidden" asp-for="ThanhTien" id="thanhtien" />

							</td>
						</tr>
					</tbody>
				</table>
				<div>
					<p>Ghi Chú</p>
					<textarea></textarea>
				</div>

				<div id="thanh-toan">
					<label class="text_khachhang_tra">Khách cần trả</label>
					<label class="tien_khachhang_tra">000.000</label>
					<p class="text_khachhang_thanhtoan">Khách thanh toán</p>

					<input value="0" class="input_khachhang_thanhtoan">
				</div>
				<button type="submit" class="confirm-button" asp-action="NhanPhong" asp-controller="Phong">Nhận Phòng</button>
				<button class="cancel-button">Đặt Trước</button>
			</form>
		</div>

	</div>


	@* trả phòng popup *@
	<div class="TraPhong" id="TraPhong">
		<div class="form-TraPhong">
			<form method="post">
				<h1> Xác nhận trả phòng-P.101</h1>
				<button id="close-TraPhong" onclick="Close_TraPhong()"><i class="bi bi-x-lg"></i></button>
				<div>
					<i class="bi bi-person" style="font-size: 23px;"></i><label id="ten_kh">Tên Khách Hàng</label>
				</div>
				<table class="table table-bodered">
					<thead class="title">
						<tr>
							<th class="text-center" style="background: #E9F5EE; ">Hạng Phòng</th>
							<th class="text-center" style="background: #E9F5EE; ">Mã Phòng</th>
							<th class="text-center" style="background: #E9F5EE; ">Ngày Nhận</th>
							<th class="text-center" style="background: #E9F5EE; ">Trả Phòng</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td class="text-center">
								@* điền hạng phòng *@
								<label id="Hang_Phong_ThanhToan"></label>
							</td>
							<td class="text-center " id="ma-phong_thanhtoan">
								<label id="lbl_Phong_ThanhToan" asp-for="Phong">P.101</label>


							</td>
							<input type="hidden" id="input_Phong_ThanhToan" asp-for="Phong" />
							<td class="text-center">
								<input type="datetime-local" name="" id="Ngay_Nhan_ThanhToan"> @* điền giá trị ngày nhận *@
							</td>
							<td class="text-center">
								<input type="datetime-local" name="" id="Ngay_Tra_ThanhToan"> @* điền giá trị ngày trả *@
							</td>
						</tr>
					</tbody>
				</table>
				<div id="border">
					<label for="" style="font-weight: 700; margin-top: 10px; margin-left: 10px;">Tổng cộng</label>
					<label for="" id="Tong_Tien_Thanh_Toan" style="font-weight: 700; color: #279656; margin-left: 150px;">000.000</label> @* điền thành tiền vào đây *@
					<br>
					<label for="" style="font-weight: 700;margin-top: 10px;margin-left: 10px;">Đã Thanh Toán</label>
					<input type="number" value="0" style="position:absolute;top:255px;right:110px">
				</div>
				<button id="Tra_Phong" type="submit" asp-action="ThanhToan" asp-controller="Phong">Trả phòng</button>
			</form>
		</div>
	</div>
	@* mới *@

	<div id="container-boder">
		<div class="room-info">
			<h2>Phòng 102 <span class="status">Đang sử dụng</span> </h2>
			<p>
				<span class="room-type">Phòng đôi</span>
			</p>
			<div class="ThoiGianSD">
				<span class="material-symbols-outlined icon">
					schedule
				</span>
				<span class="start-date">01/01/2023 09:00</span> -
				<span class="end-date">01/01/2023 10:00</span> <b>(1 giờ)</b>
				<p class="used-time">Dùng đến hiện tại: 1 giờ 5 phút</p>
			</div>
			<p>
				<span class="material-symbols-outlined">
					person
				</span>

				<span class="customer-name"> Tên khách hàng</span>
			</p>
			<p>
				<span class="material-symbols-outlined">
					group
				</span> <span class="adult-count">1 người lớn & 0 Trẻ em</span>
			</p>
			<p>
				<span class="material-symbols-outlined">
					edit
				</span> <span class="note">Chưa có ghi chú</span>
			</p>
			<p>
				<span class="material-symbols-outlined">
					receipt_long
				</span> <span class="price">100.000</span>
			</p>
			<button type="submit" class="btn-DoiPhong">Đổi phòng</button>
			<button type="submit" class="btn-TraPhong">Trả phòng</button>
		</div>
	</div>







</body>

</html>
<script src="~/js/phong.js"></script>
