<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuanLyKhachSan</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QuanLyKhachSan.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/index.css" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
          integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header>
        <div id="wrapper">
            <!-- Sidebar -->
            <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

                <!-- Sidebar - Brand -->
                <a class="sidebar-brand d-flex align-items-center justify-content-center" href="#">
                    <div class="sidebar-brand-icon">
                        <img style="height: 50px;left:0;top: 10px;position: absolute;" src="~/css/Screenshot_2_preview_rev_1.png" alt="">
                    </div>
                    <div class="sidebar-brand-text mx-3">HOTEL ASAP</div>
                </a>

                <!-- Line -->
                <hr class="sidebar-divider my-0">

                <!-- Nav Item - Tổng quan -->
                @{
                    if (Context.Request.Cookies["ChucVu"]=="Quản lý")
                    {
                        <li class="nav-item active" style="font-size:1.5em;">
                            <a class="nav-link" asp-area="" asp-action="Index" asp-controller="TongQuan">
                                <i class="fas fa-fw fa-tachometer-alt"></i>
                                <span>Tổng quan</span>
                            </a>
                            <a class="nav-link" asp-area="" asp-controller="QuanLyPhong" asp-action="Index">
                                <i class="fas fa-solid fa-bed"></i>
                                <span>Phòng</span>
                            </a>
                            <a class="nav-link" asp-area="" asp-controller="KhachHang" asp-action="Index">
                                @* <i class="fas fa-fw fa-tachometer-alt"></i> *@
                                <i class="fas fa-regular fa-user"></i>
                                <span>Khách hàng</span>
                            </a>
                            <a class="nav-link" asp-area="" asp-controller="NhanVien" asp-action="Index">
                                @* <i class="fas fa-fw fa-tachometer-alt"></i> *@
                                <i class="fas fa-solid fa-user-pen"></i>
                                <span>Nhân viên</span>
                            </a>
                            <a class="nav-link" asp-area="" asp-controller="Phong" asp-action="Index">
                                <i class="fas fa-solid fa-house-user"></i>
                                <span>Lễ tân</span>
                            </a>
                            <a class="nav-link" asp-area="" asp-controller="Login" asp-action="Index">
                                <i class="fas fa-solid fa-arrow-right-from-bracket"></i>
                                <span>Đăng xuất</span>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item active" style="font-size:1.5em;">
                            <a class="nav-link" asp-area="" asp-action="Index" asp-controller="TongQuan">
                                <i class="fas fa-fw fa-tachometer-alt"></i>
                                <span>Tổng quan</span>
                            </a>
                            <a class="nav-link" asp-area="" asp-controller="QuanLyPhong" asp-action="Index">
                                <i class="fas fa-solid fa-bed"></i>
                                <span>Phòng</span>
                            </a>
                            <a class="nav-link" asp-area="" asp-controller="KhachHang" asp-action="Index">
                                @* <i class="fas fa-fw fa-tachometer-alt"></i> *@
                                <i class="fas fa-regular fa-user"></i>
                                <span>Khách hàng</span>
                            </a>
                          
                            <a class="nav-link" asp-area="" asp-controller="Phong" asp-action="Index">
                                <i class="fas fa-solid fa-house-user"></i>
                                <span>Lễ tân</span>
                            </a>
                            <a class="nav-link" asp-area="" asp-controller="Login" asp-action="Index">
                                <i class="fas fa-solid fa-arrow-right-from-bracket"></i>
                                <span>Đăng xuất</span>
                            </a>
                        </li>
                    }
                }
               
            </ul>
            <div id="content-wrapper" class="d-flex flex-column">
                <!-- Main Content -->
                <div id="content">

                    <!-- Topbar -->
                    <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                        <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                            <i class="fa fa-bars"></i>
                        </button>
                        <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                            <input disabled type="text" name="time" class="form-control" id="input_time" placeholder="Thời gian hiện tại" style="background-color:white;" />
                        </form>

                        <ul class="navbar-nav ml-auto">                        
                            <li class="nav-item dropdown no-arrow">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <!-- Tên admin -->
                                    <span class="mr-2 d-none d-lg-inline text-gray-600 small">
                                            @Context.Request.Cookies["TenNhanVien"]
                                    </span>
                                    <img class="img-profile rounded-circle" src="~/css/icons8-male-user-60.png">
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                                    <a class="dropdown-item" asp-controller="HoSo" asp-action="Index" asp-route-id="@Context.Request.Cookies["MaNv"]">Hồ sơ</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Login" asp-action="Index">Đăng xuất</a>
                                </div>                            
                            </li>
                        </ul>
                    </nav>
                    <div class="container-fluid" >

                        <main >

                            @Html.Partial("_Notifical")
                            @RenderBody()
                        </main>
                    </div>
                </div>
            </div>
    </header>
    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<script>
    // Lấy thời gian hiện tại
    const now = new Date();

    // Cập nhật thời gian vào form
    const form = document.querySelector("form");
    const inputTime = form.querySelector("input[name='time']");
    inputTime.value = `${now.getDate()}/${now.getMonth() + 1}/${now.getFullYear()} ${now.getHours()}:${now.getMinutes()}:${now.getSeconds()}`;

    // Chạy vòng lặp mỗi giây để cập nhật thời gian
    setInterval(() => {
        // Lấy thời gian hiện tại
        const now = new Date();

        // Cập nhật thời gian vào form
        inputTime.value = `${now.getDate()}/${now.getMonth() + 1}/${now.getFullYear()} ${now.getHours()}:${now.getMinutes()}:${now.getSeconds()}`;
    }, 1000);

</script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> 

<script>
    $(document).ready(function () {
        // Xử lý sự kiện click vào ảnh admin
        $('#userDropdown').on('click', function (e) {
            e.preventDefault(); // Ngăn chặn chuyển hướng mặc định

            // Hiển thị hoặc ẩn dropdown menu
            $('.dropdown-menu').toggle();
        });
    });
</script>
